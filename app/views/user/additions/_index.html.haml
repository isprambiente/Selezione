%turbo-frame#request
  %h4.title.is-4.mt-3.mb-3= fa 'fa-folder-plus fa-fw', t('activerecord.models.addition.other')
  .list
    = render @additions
    - if @editable
      %a.box.list-item.is-hoverable{href: new_user_request_addition_path(current_user, @request)}
        .list-item-image
          .image
            %img.fa.fa-circle-plus.fa-2x
        .list-item-content
          .list-item-title #{t 'site.generic.new'} #{t 'activerecord.models.addition.one' }
        .list-item-controls
          .buttons.is-right
            %button.button= fa 'fa-maximize'
