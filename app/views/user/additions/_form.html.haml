= form_with(model: [current_user, @request, addition]) do |form|
  - if addition.errors.any?
    <div style="color: red">
    <h2><%= pluralize(addition.errors.count, "error") %> prohibited this addition from being saved:</h2>
    <ul>
    <% addition.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
    </ul>
    </div>

  .field
    = form.label :title, class: 'label'
    .control= form.text_field :title, class: 'input', required: true, maxlength: 246
 
  .field
    = form.label :description, class: 'label'
    .control= form.text_area :description, class: 'textarea'

  .field
    = form.label :url, class: 'label'
    .control= form.url_field :url, class: 'input'

  .field
    = form.label :file, class: 'label'
    .control= form.file_field :file, class: 'input'

  .field.is-grouped.is-grouped-centered
    %p.control= form.button class: 'button is-success'
    %p.control= link_back user_request_additions_path(current_user, @request), class: 'button is-info'
