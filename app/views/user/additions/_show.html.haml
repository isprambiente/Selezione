%turbo-frame#request
  .box.details
    %h4.title.is-4= fa 'fa-folder-plus fa-fw', t('activerecord.models.addition.other')
    .columns.is-multiline
      .column.is-12= details_element addition, :title
      .column.is-12= details_description addition, :description if addition.description?
      - if addition.url?
        .column= details_element addition, :url, alt:   link_to(fa('fa-link fa-fw',addition.url), addition.url)
      - if addition.file.present?
        .column= details_element addition, :file, alt: link_to(fa('fa-paperclip fa-fw', addition.file.filename), rails_blob_path(addition.file, disposition: "attachment")) 
    .block.has-text-centered
      = link_back user_request_additions_path(current_user, user_request), class: 'button is-info'
      - if editable
        = link_edit edit_user_request_addition_path(current_user, user_request, addition), class: 'button is-success'
        = link_destroy user_request_addition_path(current_user, user_request, addition), class: 'button is-warning'
