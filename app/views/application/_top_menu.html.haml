        %a.navbar-burger{ role: "button", aria: {label: "menu", expanded: "false"}, data: {action: 'page#toggleMenu'}}
          %span{aria: {hidden: true}}
          %span{aria: {hidden: true}}
          %span{aria: {hidden: true}}
      .navbar-menu{data: {page_target: 'menu'}}
        .navbar-start
          %a.navbar-item{href: contests_path, data: {turbo_frame: 'yield'}}= fa 'fa-calendar-check fa-fw', t('activerecord.models.contest.other')
          - if user_signed_in?
            %a.navbar-item{href: user_requests_path(current_user), data: {turbo_frame: 'yield'}}= fa 'fa-check fa-fw', t('activerecord.models.request.other')
