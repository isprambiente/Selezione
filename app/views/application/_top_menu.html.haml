              %a.navbar-item{href: root_path(locale: 'it'), data: {turbo: false}}= fa 'fa-flag fa-fw', 'ITA'
              %a.navbar-item{href: root_path(locale: 'en'), data: {turbo: false}}= fa 'fa-flag fa-fw', 'ENG'
          - if user_signed_in?
            .navbar-item.has-dropdown.is-hoverable
              %a.navbar-link{src: user_requests_path(current_user)}= fa 'fa-user'
              .navbar-dropdown
                %a.navbar-item{href: destroy_user_session_path, data: {method: :delete}}= fa 'fa-right-from-bracket fa-fw', t('site.generic.logout')
          - else
            %a.navbar-item{href: new_user_session_path, data: {turbo: 'false'}}= fa 'fa-right-to-bracket fa-fw'

